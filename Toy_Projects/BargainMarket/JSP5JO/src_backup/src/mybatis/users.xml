<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="users">
	<select id="loginCheck" parameterType="java.util.Map" resultType="SessionDto"> <!-- 로그인시 아이디 비밀번호 체크 -->
		select * from users where id=#{id} and pw=#{pw}	
	</select>
	
	<!-- 회원가입 -->
	<insert id="regist" parameterType="Users"> 
		insert into users(name,id,pw,email) 
			values (#{name},#{id},#{pw},#{email})
	</insert>
	
	<select id="loginUserInfo" parameterType="String" resultType="Users">
		select * from users where id=#{id};
	</select>	
	
  </mapper>